{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "UV Build project",
            "type": "shell",
            "command": "uv build"
        },
        {
            "label": "Remove build files",
            "type": "shell",
            "command": "rm */build/* -Confirm"
        },
        {
            "label": "Remove dist files",
            "type": "shell",
            "command": "rm */dist/* -Confirm"
        },
        {
            "label": "Remove egg-info",
            "type": "shell",
            "command": "rm */*egg-info -Confirm"
        },
        {
            "label": "Run all tasks",
            "type": "shell",
            "dependsOn": [
                "UV Build project",
                "Remove build files",
                "Remove dist files",
                "Remove egg-info"
            ]
        }
    ]
}